.side_content

  .header
    .header__name
      = current_user.name

    %ul.header__icons
      %li.icon_list
        = link_to do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.icon_list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'

  .groups
    .group
      .group__name
        グループ名
      .group__message
        メッセージ

.main_content

  .header
    .left-header
      .left-header__title
        グループ名
      %ul.left-header__members
        Member:
        %li.member
          はたけだ
    .edit-button
      Edit

  .messages
    .message
      .message__user-name
        ユーザー名
      .message__date
        2018/3/01 01:01
      .message__user-message
        おはようございます

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :body, class: "form__message", placeholder: "type a message"
      .form_phot_icon
        = f.label :image, class: "" do
          = fa_icon "picture-o", class: "form_photo_icon"
          = f.file_field :image, class: "hidden"
      = f.submit "Send", class: "form__submit"
