.wrapper

  = render 'shared/left_side'

.main_content

  .header
    .left-header
      .left-header__title
        = @group.name
      %ul.left-header__members
        Member :
        - @group.users.each do |user|
          %li.member
            = user.name
    .edit-button
      = link_to "Edit", edit_group_path(@group), class: 'group_edit_btn'

  .messages
    = render @messages

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :body, class: "form__message", placeholder: "type a message"
      .form_phot_icon
        = f.label :image, class: "" do
          = fa_icon "picture-o", class: "form_photo_icon"
          = f.file_field :image, class: "file_field"
      = f.submit "Send", class: "form__submit"
